<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_good_details"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/good_detail_title_bg"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:id="@+id/bcLayout"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivBack"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                />
            <TextView
                android:id="@+id/tvBackTitle"
                android:text="商品详情"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/ivCart"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/bg_cart_selected"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:src="@mipmap/bg_collect_in"
                android:id="@+id/ivLike"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/ivShared"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/bg_share_nor"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tvTitleGoodDetils"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:text="你好你好你好你好你好"
        android:layout_marginTop="50dp"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/detailsSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你好你好"
            />
        <TextView
            android:id="@+id/detailsPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:layout_alignParentRight="true"
            android:layout_marginRight="55dp"
            android:text="你好"
            />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vpPic"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="250dp"
        android:layout_height="282dp" />
    <ucai.cn.fulicenter.view.FlowIndicator
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:count="3"
        app:r="15"
        app:space="20"
        app:focus="0"
        app:focus_color="@color/red"
        app:normal_color="@color/gray"
        />

    <TextView
        android:id="@+id/detailsDsc"
        android:layout_width="250dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:text="你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好你好"

        />




</LinearLayout>
